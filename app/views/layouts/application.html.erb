<!DOCTYPE html>
<html>
<head>
  <title>UrlShortener</title>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= stylesheet_link_tag 'bootstrap' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'bootstrap' %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to "URL shortener", :root, class: "navbar-brand" %>
    </div>
    <div class="collapse navbar-collapse">
      <ul class="nav navbar-nav">
        <li <% if is_at_home? %> class="active" <% end %>>
          <%= link_to "Home", :root %>
        </li>
        <% if is_signed_in? %>
            <li>
              <%= link_to "Sign out", destroy_user_session_path, method: :delete %>
            </li>
        <% else %>
            <li <% if is_at_sign_in? %> class="active" <% end %>>
              <%= link_to "Sign in", new_user_session_path %>
            </li>
            <li <% if is_at_sign_up? %> class="active" <% end %>>
              <%= link_to "Register", new_user_registration_path %>
            </li>
        <% end %>

      </ul>
    </div>
  </div>
</div>


<p id="notice-box" class="alert alert-success"
   <% unless notice %>style="display: none;"
<% end %>><%= notice %></p>

<p id="alert-box" class="alert alert-danger"
   <% unless alert %>style="display: none;"
<% end %>>
  <%= alert %>
</p>


<%= yield %>

</body>
</html>
